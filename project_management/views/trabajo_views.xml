<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_project_trabajo_list" model="ir.ui.view">
            <field name="name">project.trabajo.list</field>
            <field name="model">project.trabajo</field>
            <field name="arch" type="xml">
                <list string="Trabajos">
                    <field name="name"/>
                    <field name="proyecto_id"/> <field name="responsible_id"/>
                    <field name="state"/>
                    <field name="priority" widget="priority"/>
                    <field name="progress" widget="progressbar"/>
                </list>
            </field>
        </record>

        <record id="view_project_trabajo_form" model="ir.ui.view">
            <field name="name">project.trabajo.form</field>
            <field name="model">project.trabajo</field>
            <field name="arch" type="xml">
                <form string="Trabajo">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="TÃ­tulo del Trabajo..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="proyecto_id"/>
                                <field name="responsible_id"/>
                            </group>
                            <group>
                                <field name="priority" widget="priority"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="progress"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Actividades">
                                <field name="actividad_ids" readonly="state in ['revision', 'finalizado']">
                                    <list>
                                        <field name="name"/>
                                        <field name="user_id"/>
                                        <field name="state"/>
                                        <field name="progress" widget="progressbar"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_project_trabajo" model="ir.actions.act_window">
            <field name="name">Trabajos</field>
            <field name="res_model">project.trabajo</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_project_trabajo"
                  name="Trabajos"
                  parent="menu_project_management_root"
                  action="action_project_trabajo"
                  sequence="5"/>

    </data>
</odoo>